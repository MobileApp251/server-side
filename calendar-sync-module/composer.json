{
    "name": "jira-clone/calendar-sync-module",
    "description": "Calendar Sync Module for Jira Clone Application",
    "type": "project",
    "require": {
        "php": "^8.0",
        "google/apiclient": "2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "CalendarSync\\": "models/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "test-coverage": "phpunit tests/ --coverage-html coverage-report",
        "analyse": "phpstan analyse models/ api/ --level=5",
        "test-all": [
            "@test",
            "@analyse"
        ]
    }
}
